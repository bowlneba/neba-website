# Test-only analyzer suppressions
[*.cs]

# Don't require accessibility modifiers on test classes
dotnet_style_require_accessibility_modifiers = silent

# Allow returning mocks and interfaces in tests
dotnet_diagnostic.CA1859.severity = none # prefer concrete return types

# Skip XML documentation for test helpers
dotnet_diagnostic.CS1591.severity = none # missing XML docs

# Permit underscores in test method names
dotnet_diagnostic.CA1707.severity = none # identifiers should not contain underscores

dotnet_diagnostic.CA1812.severity = none # avoid uninstantiated internal classes
